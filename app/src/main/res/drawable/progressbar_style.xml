<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/custom_track.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background track -->
    <item>
        <shape android:shape="rectangle">
            <!-- Rounded corners for background -->
            <corners android:radius="100dp"/> <!-- Adjust radius to your liking -->
            <solid android:color="@color/white"/> <!-- Background track color -->
            <size android:height="50dp"/> <!-- Track height -->
        </shape>
    </item>

    <!-- Progress track -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <!-- Rounded corners for progress -->
                <corners android:radius="100dp"
                    />
                <!-- Adjust radius to match background -->

                <gradient android:startColor="#E0064F"
                    android:centerColor="#F24FB8"
                    android:endColor="#F88EE1"/> <!-- Progress color -->
                <size android:height="50dp"/> <!-- Same as background height -->
            </shape>
        </clip>
    </item>
</layer-list>
