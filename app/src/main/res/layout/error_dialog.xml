<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dialogBody"
        android:layout_width="match_parent"
        android:background="@drawable/error_dialog_bg"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:src="@drawable/error_dialog_icon" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/font"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Wrong answer try again !"
            android:layout_marginBottom="50dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialogTryAgainBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_radio_btn"
        android:text="Try again"
        android:textColor="@color/correct"
        android:fontFamily="@font/font"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/dialogBody"
        app:layout_constraintStart_toStartOf="@+id/dialogBody"
        app:layout_constraintTop_toBottomOf="@+id/dialogBody" />

</androidx.constraintlayout.widget.ConstraintLayout>