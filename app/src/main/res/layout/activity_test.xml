<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg"
    tools:context=".ui.test.dyscalculiaTest.DyscalculiaTestActivity">

    <LinearLayout
        android:layout_margin="30dp"
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/font"
            android:padding="10dp"
            android:text="End session" />

        <TextView
            android:id="@+id/pages"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:text="1/4"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.0" />

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/dotsIndicator"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsSize="20sp"
        app:dotsStrokeColor="@color/black"
        app:dotsClickable="true"
        app:dotsSpacing="10dp"
        app:dotsColor="@color/correct"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/custom_btn"
        android:gravity="center"
        android:padding="10dp"
        android:stretchColumns="0,1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow>

            <TextView
                android:layout_column="0"
                android:fontFamily="@font/font"
                android:padding="8dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_column="1"
                android:fontFamily="@font/font"
                android:padding="8dp"
                android:text="Type"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_column="2"
                android:fontFamily="@font/font"
                android:padding="8dp"
                android:text="NO of Q"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/nameOfTest"
                android:layout_column="0"
                android:fontFamily="@font/font"
                android:padding="8dp"
                android:text="AAA"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/typeOfTest"
                android:layout_column="1"
                android:fontFamily="@font/font"
                android:padding="8dp"
                android:text="Dyslexia"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/noOfQuestions"
                android:layout_column="2"
                android:fontFamily="@font/font"
                android:padding="8dp"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </TableRow>
    </TableLayout>




</androidx.constraintlayout.widget.ConstraintLayout>