        <activity
            android:name=".ui.signLogin.Login.LoginActivity"
            android:exported="false" /> <!-- أنشطة الملف الشخصي والأطفال -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.children.Children"
            android:exported="false" />
        <activity
            android:name=".ui.profile.children.AddChildActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.children.ChildrenTests"
            android:exported="false" /> <!-- أنشطة الرياضيات -->
        <activity
            android:name=".ui.math.MainMathActivity"
            android:exported="false" />
        <activity
            android:name=".ui.math.AddingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.math.ComparisonActivity"
            android:exported="false" />
        <activity
            android:name=".ui.math.ArithmeticSequenceActivity"
            android:exported="false" /> <!-- أنشطة القراءة -->
        <activity
            android:name=".ui.reading.ReadingMainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.reading.ReadTextActivity"
            android:exported="false" />
        <activity
            android:name=".ui.reading.ReadCustomTextActivity"
            android:exported="false"
